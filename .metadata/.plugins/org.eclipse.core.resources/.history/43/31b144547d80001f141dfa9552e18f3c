<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	<configuration>
	
	<!-- 1. dbconn.properties Wiring(파일사이에 관계) -->
	<properties resource="config/dbconn.properties"/>
	
	<!-- 2. VO 객체 Wiring -->
	<typeAliases>
		<typeAlias type="spring.service.domain.MemberVO" alias="member"/>
	</typeAliases>
	
	<!-- 3. JDBC 환경구축 -->
	<environments default="aa">
		<environment id="aa"> <!-- id는 default와 동일하게 만들기 -->
			<transactionManager type="JDBC"/>
			<dataSource type="UNPOOLED"> <!-- DriverManager방식, 추후 웹에서는 POOLED로 변경됨-->
				<property name="driver" value="${jdbc.mysql.driver}"/> <!-- 매핑 -->
				<property name="url" value="${jdbc.mysql.url}"/>
				<property name="username" value="${jdbc.mysql.username}"/>
				<property name="password" value="${jdbc.mysql.password}"/>
			</dataSource>
		</environment>
	</environments>
	
	<!-- 4. sql구문의 모듈화 테이블1개에 mapper가 하나씩 나오게됨-->
	<mappers>
		<mapper resource="mapper/mybatis-memberservice-mapping.xml"/>
	</mappers>
</configuration>
