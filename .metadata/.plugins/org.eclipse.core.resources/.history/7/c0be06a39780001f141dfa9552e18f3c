<mapper namespace="ns.sql.FruitMapper">
	<sql id="select-myproduct">
		SELECT 
		id, name, maker, price
		FROM myproduct 	
	</sql>
	<insert id="addProduct" parameterType="myProduct">
		INSERT 
		INTO myProduct (user_id, user_name, password, age, grade, reg_date)
		VALUES(#{userId}, #{userName}, #{password}, #{age}, #{grade}, #{regDate})
		
		
	</insert>
	
	<select id="findProductByName" parameterType="string">

		WHERE name=#{VALUE}
	</select>
	<select id="findProductByMaker" parameterType="string">
		SELECT 
		id, name, maker, price
		FROM myproduct 
		WHERE maker=#{VALUE}
	</select>
	<select id="findProducts">
		SELECT 
