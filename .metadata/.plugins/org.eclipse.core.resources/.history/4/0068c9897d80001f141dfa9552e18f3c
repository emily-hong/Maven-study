<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 선언부 -->
<!-- id안에는 비지니스로직 함수명, 인자값은 parametertype으로
	 mySawon.getId()==#{id}
-->
<mapper namespace="MemberMapper">
	<sql id="select-users">
		SELECT
		id, name, password, address
		FROM member
	</sql>
	<sql id="order-userid-desc">
		ORDER BY id DESC
	</sql>
	
	<insert id="registerMember" parameterType="member"><!-- SqlMapConfig에서 typealias 와 같게 -->
		INSERT
		INTO member(id, password, name, address)
		VALUES(#{id}, #{password}, #{name}, #{address})
	</insert>	
	
	<delete id="deleteMember" parameterType="string">
		<!-- 아이디가 mybatis인 회원을 삭제 -->
		DELETE
		FROM member
		WHERE id=#{VALUE}
	</delete> 
	
	<update id="updateMember" parameterType="member">
		UPDATE member
		SET id=#{id}, password=#{password}, name=#{name}, address=#{address}
		WHERE id=#{id}
	</update>
	
	<select id="showAllMember" resultType="member">
		<include refid="select-users" />
		<include refid="order-userid-desc" />
	</select>
	
	<select id="getMember" parameterType="string" resultType="member">
		<!-- 아이디가 k로 시작하는 회원을 검색 like연산자와 와일드카드 % 사용 -->
		<include refid="select-users" />
		WHERE id LIKE CONCAT(#{VALUE},'%')
	</select>
	
	<!-- idExist -->
	<select id="idExist" parameterType="string" resultType="boolean">
		SELECT IF(COUNT(*) = 1, 1, 0)
		FROM member
		WHERE id=#{VALUE}
	</select>
		
	<!-- login -->
	<select id="login" parameterType="member" resultType="member" >
		<include refid="select-users" />
		WHERE id=#{id} AND password=#{password}
	</select>
	
	
	<!-- 동적쿼리 -->

	
</mapper>